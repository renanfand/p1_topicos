
<div class="">
	<div class="container">
		<div class="col-xs-4">
			<div class="panel-body">
				<%= form_tag("/restaurantes/homepage", method: "restaurante") do %>
				<%= label_tag(:nome, "Pesquisar por prato") %>
				<%= text_field_tag(:nome, nil, :class => 'form-control') %>
				<%= submit_tag("Search", :class => 'btn btn-default') %>
				<% end %>
			</div>
		</div>
		<div class="col-md-4 col-sm-4">
			<div class="row">
				<div class="col-md-12 col-sm-12">
					<div class="panel panel-info">
						<div class="panel-heading">Categorias de pratos</div>
						<div class="panel-body">
							<ul>
								<% @categories.each do |category| %>
								<li>
									<%= link_to category.nome, homepage_restaurantes_path(category_id: category.id) %>
								</li>
								<% end %>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="col-xs-12">
			<% @restaurantes.each do |restaurante| %>
			<div class="container-item col-xs-4" style="margin-bottom: 30px">
				<div class="col-xs-12" style="background: #f1f1f1; border-radius: 5px;">
					<div class="">
						<h2 class="title"><%= restaurante.nome %></h2>
					</div>
					<div class="texto-exibir">
						<p>
							<strong>Endere√ßo:</strong>
							<%= restaurante.endereco %>
						</p>
						<p>
							<strong>Telefone:</strong>
							<%= restaurante.telefone %>
						</p>
						<h5><%= link_to 'Ver mais', restaurante, :class => 'btn btn-info' %></h5>
					</div>
				</div>
			</div>
			<% end %>
		</div>
	</div>
</div>