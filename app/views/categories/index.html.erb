<div class="">
  <div class="container">
    <p id="notice"><%= notice %></p>

    <div class="page-header">
      <h1 class="title">Categorias</h1>
    </div>

    <div class="col-xs-12">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Nome</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @categories.each do |category| %>
          <tr>
            <td><%= category.nome %></td>
            <td><%= link_to 'Visualizar', category, :class => "btn btn-info" %></td>
            <td><%= link_to 'Editar', edit_category_path(category), :class => "btn btn-primary" %></td>
            <td><%= link_to 'Deletar', category, method: :delete, data:  { confirm: 'Deseja realmente excluir?' }, :class => "btn btn-danger" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <br>
    <div class="col-xs-12 container-btn-new">
      <%= link_to 'Nova categoria', new_category_path, :class => "btn btn-success" %>
    </div>
  </div>
</div>
