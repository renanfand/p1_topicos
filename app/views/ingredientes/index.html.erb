<div class="">
  <div class="container">
    <p id="notice"><%= notice %></p>

    <div class="page-header">
      <h1 class="title">Ingredientes</h1>
    </div>

    <div class="col-xs-12">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Descricao</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @ingredientes.each do |ingrediente| %>
          <tr>
            <td><%= ingrediente.nome %></td>
            <td><%= link_to 'Visualizar', ingrediente, :class => "btn btn-info" %></td>
            <td><%= link_to 'Editar', edit_ingrediente_path(ingrediente), :class => "btn btn-primary" %></td>
            <td><%= link_to 'Deletar', ingrediente, method: :delete, data:  { confirm: 'Deseja realmente excluir?' }, :class => "btn btn-danger" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <br>
    <div class="col-xs-12 container-btn-new">
      <%= link_to 'Novo', new_ingrediente_path, :class => "btn btn-success" %>
    </div>
  </div>
</div>
